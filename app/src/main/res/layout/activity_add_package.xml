<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextPackageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Package Name"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextPackageDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextPackageDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration (in days)"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextPackagePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextAvailableSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Available Seats"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonAddPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Package"/>
</LinearLayout>
